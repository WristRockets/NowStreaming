{
	"manifest_version": 2,

	"name": "NowStreaming",
	"options_page": "options.html",
	"description": "Manage your favorite streamers, get instant notifications when they come online, and much more!",
	"version": "1.6.2",
	"author": "Jota",

	"background": {
		"scripts": ["background.js", "jquery-3.2.1.min.js"],
		"persistent": false
	},

	"icons": {
      "128": "icon.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "NowStreaming",
		"default_popup": "popup.html"
	},

	"permissions": [
		"notifications",
		"activeTab",
		"alarms",
		"storage",
		"http://api.twitch.tv/*",
		"https://api.twitch.tv/*",
		"http://*.jtvnw.net/*",
		"https://*.jtvnw.net/*"
	]
}
